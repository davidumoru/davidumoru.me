<style>
  .timeline-post {
    display: flex;
    margin-bottom: 2rem;
    position: relative;
  }

  .timeline-marker {
    width: 2px;
    background-color: #ddd;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    margin-left: -1px;
  }

  .timeline-marker::before {
    content: "";
    position: absolute;
    top: 10px;
    left: -6px;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: #fff;
    border: 2px solid #ddd;
    z-index: 1;
  }

  .post-content {
    width: calc(100% - 0px);
    padding-left: 20px;
  }

  .date {
    font-size: 0.9rem;
    color: #777;
    margin-bottom: 0.5rem;
  }

  .content {
    line-height: 1.6;
  }

  .timeline-post:hover .timeline-marker {
    background-color: #aaa;
  }
  .timeline-post:hover .timeline-marker::before {
    border-color: #aaa;
  }
</style>
