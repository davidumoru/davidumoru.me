---
import { getCollection } from "astro:content";
import Webring from "../components/Webring.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import CenteredLayout from "../layouts/CenteredLayout.astro";
import PageHeader from "../components/PageHeader.astro";

const webrings = await getCollection("webrings");
---

<BaseLayout title="Webrings">
  <CenteredLayout>
  <PageHeader
    title="Webrings"
    description="Webrings connect related sites in a loop. I'm part of these:"
    datePublished={new Date("2025-04-21")}
  />
  <section>
    <div class="webrings">
      {webrings.map((webring) => <Webring webring={webring} />)}
    </div>
  </section>
</CenteredLayout>
</BaseLayout>

<style>
  .webrings {
    display: flex;
    flex-direction: column;
    gap: var(--space-m);
  }
</style>
