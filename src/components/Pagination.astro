---
interface Props {
  currentPage: number;
  hasNextPage: boolean;
  hasPrevPage: boolean;
}

const { currentPage, hasNextPage, hasPrevPage } = Astro.props;
---

<nav class="pagination">
  {
    hasPrevPage ? (
      <a
        href={`/guestbook?page=${currentPage - 1}`}
        class="px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg transition-colors"
      >
        ← Previous
      </a>
    ) : (
      <div />
    )
  }

  {
    hasNextPage && (
      <a
        href={`/guestbook?page=${currentPage + 1}`}
        class="px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg transition-colors"
      >
        Next →
      </a>
    )
  }
</nav>

<style>
  .pagination {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 2rem;
    margin-bottom: 3rem;
  }
  .pagination a {
    padding: 0.5rem 1rem;
    background-color: #f3f4f6;
    border-radius: 0.5rem;
    text-decoration: none;
    transition: background-color 0.2s;
  }
  .pagination a:hover {
    background-color: #e5e7eb;
  }
</style>
