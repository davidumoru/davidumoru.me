---
interface Props {
  author: string;
  link?: string;
  content: string;
  timestamp: Date;
}

const { author, link, content, timestamp } = Astro.props;
---

<article
  class="bg-white rounded-lg shadow-sm p-6 mb-4 transition-all hover:shadow-md"
>
  <header class="flex items-center justify-between mb-3">
    <h3 class="font-bold text-lg text-gray-800">{author}</h3>
    {
      link && (
        <a
          href={link}
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm text-blue-600 hover:text-blue-800 transition-colors"
        >
          ðŸ”— Website
        </a>
      )
    }
  </header>
  <p class="text-gray-700 mb-2 leading-relaxed">{content}</p>
  <time datetime={timestamp.toISOString()} class="text-sm text-gray-500">
    {new Date(timestamp).toLocaleString()}
  </time>
</article>
