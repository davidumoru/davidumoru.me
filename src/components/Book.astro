---
export interface Book {
  title: string;
  author: string;
  coverUrl: string;
  reviewUrl?: string | null;
}

interface Props {
  book: Book;
}

const { book } = Astro.props;
---

<a
  href={book.reviewUrl}
  target="_blank"
  rel="noopener noreferrer"
  class:list={["book-card", { "no-link": !book.reviewUrl }]}
  aria-label={book.reviewUrl
    ? `Read review for ${book.title}`
    : `Cover for ${book.title}`}
>
  <div class="cover-frame">
    <img
      src={book.coverUrl}
      alt={`Cover of ${book.title}`}
      width="200"
      height="300"
      loading="lazy"
      class="cover-image"
    />
  </div>
  <p class="title">{book.title}</p>
</a>

<style>
  .book-card {
    display: block;
    text-decoration: none;
    color: inherit;
    transition: transform 200ms cubic-bezier(0.25, 0.46, 0.45, 0.94);
    will-change: transform;
  }

  .book-card.no-link {
    cursor: default;
  }

  .cover-frame {
    background-color: var(--gray-4);
    padding: 0.75rem;
    margin-bottom: 0.75rem;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
  }

  .cover-image {
    display: block;
    width: 100%;
    height: auto;
    aspect-ratio: 2 / 3;
    object-fit: cover;
  }

  .title {
    color: var(--gray-11);
    text-align: center;
    padding: 0 0.25rem;
    opacity: 0;
    transform: translateY(4px);
    transition:
      opacity 150ms cubic-bezier(0.25, 0.46, 0.45, 0.94),
      transform 150ms cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .book-card:hover {
    transform: translateY(-4px);
  }

  .book-card:hover .title {
    opacity: 1;
    transform: translateY(0);
  }

  @media (hover: none), (pointer: coarse) {
    .title {
      opacity: 1;
      transform: translateY(0);
    }

    .book-card:hover {
      transform: none;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .book-card {
      transition: none;
    }

    .title {
      opacity: 1;
      transform: none;
      transition: none;
    }
  }
</style>
