---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

interface Props {
  entry: CollectionEntry<"lab">;
}

const { entry } = Astro.props;
const { id, data } = entry;
---

<article class="lab-card">
  <a href={`/lab/${id}`} class="card-link">
    <div class="card-image-area">
      {
        data.coverImage ? (
          <Image
            src={data.coverImage}
            alt={data.coverAlt || `Preview for ${data.title}`}
            class="preview-image"
            loading="lazy"
          />
        ) : (
          <div class="preview-placeholder" />
        )
      }
    </div>
    <p class="card-title">{data.title}</p>
  </a>
</article>

<style>
  .lab-card {
    background-color: var(--gray-1);
    border: 1px solid var(--gray-6);
    border-radius: 12px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    padding: 0.5rem;
    height: 220px;
    position: relative;
    transition:
      transform var(--duration-normal, 200ms)
        var(--ease-out, cubic-bezier(0.25, 0.46, 0.45, 0.94)),
      background-color var(--duration-normal, 200ms)
        var(--ease-out, cubic-bezier(0.25, 0.46, 0.45, 0.94)),
      border-color var(--duration-normal, 200ms)
        var(--ease-out, cubic-bezier(0.25, 0.46, 0.45, 0.94)),
      box-shadow var(--duration-normal, 200ms)
        var(--ease-out, cubic-bezier(0.25, 0.46, 0.45, 0.94));
    will-change: transform;
  }

  .lab-card:hover {
    background-color: var(--gray-2);
    border-color: var(--tomato-8);
    transform: translateY(-4px) scale(1.02);
    box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.15);
    z-index: 10;
  }

  .card-link {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
    height: 100%;
  }

  .card-image-area {
    width: 100%;
    flex: 1;
    overflow: hidden;
    background-color: var(--gray-6);
    position: relative;
    border-radius: 6px;
    min-height: 0;
  }

  html[data-theme="dark"] .card-image-area {
    background-color: var(--gray-8);
  }

  .preview-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--duration-slow, 250ms)
      var(--ease-out, cubic-bezier(0.25, 0.46, 0.45, 0.94));
  }

  .lab-card:hover .preview-image {
    transform: scale(1.05);
  }

  .preview-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--gray-6) 0%, var(--gray-8) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  html[data-theme="dark"] .preview-placeholder {
    background: linear-gradient(135deg, var(--gray-8) 0%, var(--gray-11) 100%);
  }

  .card-title {
    color: var(--gray-12);
    margin: 0;
    padding: 0.5rem 0 0;
    font-size: 1rem;
    text-align: center;
    flex-shrink: 0;
    transition: color var(--duration-normal, 200ms) ease;
  }

  .lab-card:hover .card-title {
    color: var(--tomato-11);
  }
</style>
