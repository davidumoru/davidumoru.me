---
import ThemeToggle from "../components/ThemeToggle.astro";
---

<header class="site-header container">
  <div class="header-main">
    <a href="/" class="h1 fs-3">xD</a>
    <div class="header-actions">
      <nav class="nav-links">
        <a
          href="/about"
          font-family:
          "Pixelify
          Sans",
          sans-serif;
          aria-current={Astro.url.pathname.includes("/about")
            ? "page"
            : undefined}>About</a
        >
        <a
          href="/posts"
          aria-current={Astro.url.pathname.includes("/posts")
            ? "page"
            : undefined}>Posts</a
        >
        <a
          href="/projects"
          aria-current={Astro.url.pathname.includes("/projects")
            ? "page"
            : undefined}>Projects</a
        >
      </nav>
      <ThemeToggle />
    </div>
  </div>
</header>

<style>
  .h1 {
    font-family: "Pixelify Sans", sans-serif;
  }

  .site-header {
    display: flex;
    flex-direction: column;
    padding-inline: 0 !important;
    border-bottom: 1px solid var(--gray-7);
  }

  .header-main {
    width: 100%;
    padding: 0 var(--space-xs);
    display: flex;
    align-items: center;
    justify-content: space-between;
    min-height: 3rem;
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: var(--space-m);
    flex-shrink: 0;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: var(--space-l);
  }

  .nav-links a {
    text-decoration: none;
    color: inherit;
    transition: background 0.15s;
    white-space: nowrap;
  }

  .nav-links a[aria-current="page"] {
    font-weight: bold;
  }

  @media (max-width: 40rem) {
    .header-main {
      padding: 0 var(--space-xs);
      min-height: 3.5rem;
    }

    .nav-links {
      gap: var(--space-m);
    }

    .header-actions {
      gap: var(--space-s);
    }
  }

  @media (max-width: 25rem) {
    .header-main {
      padding: 0 var(--space-xs);
    }

    .header-actions {
      gap: var(--space-xs);
    }
  }
</style>
