---
import { Icon } from "./Icon/Icon";

interface Props {
  buttonText?: string;
  placeholderText?: string;
  title?: string;
}

const {
  buttonText = "Subscribe",
  placeholderText = "Enter your email",
  title = "Subscribe for project updates, web finds, and personal notes written like letters to friends.",
} = Astro.props;
---

<div class="subscribe-container">
  <p class="subscribe-title">{title}</p>
  <form
    action="https://buttondown.email/api/emails/embed-subscribe/notesfromdavid"
    method="post"
    target="popupwindow"
    onsubmit="window.open('https://buttondown.email/notesfromdavid', 'popupwindow')"
    class="subscribe-form"
  >
    <label for="bd-email" class="visually-hidden">Email Address</label>
    <input
      id="bd-email"
      type="email"
      name="email"
      placeholder={placeholderText}
      required
      class="subscribe-input"
    />
    <input type="hidden" value="1" name="embed" />
    <button type="submit" class="subscribe-button" aria-label="Subscribe">
      <span class="button-text">{buttonText}</span>
      <span class="button-icon" aria-hidden="true">
        <Icon icon="arrowRight" size="20" />
      </span>
    </button>
  </form>
</div>

<style>
  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  .subscribe-container {
    padding: 2rem;
    border: 1px solid var(--gray-8);
    border-radius: 0.5rem;
    margin: 0 auto;
  }

  .subscribe-title {
    margin: 0 0 1rem 0;
    color: inherit;
    max-width: 65ch;
  }

  .subscribe-form {
    display: flex;
    gap: 0.5rem;
  }

  .subscribe-input {
    padding: 0.5rem 0.75rem;
    border: 1px solid var(--gray-7);
    background-color: var(--gray-1);
    color: var(--gray-12);
    border-radius: 0.25rem;
    width: 100%;
    flex-grow: 1;
    transition:
      border-color 0.2s ease-out,
      outline 0.2s ease-out;
  }

  .subscribe-input:focus-visible {
    outline: 2px solid var(--gray-10);
    outline-offset: 2px;
    border-color: var(--gray-10);
  }

  .subscribe-button {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    background-color: var(--gray-12);
    color: var(--gray-1);
    border: none;
    border-radius: 0.25rem;
    cursor: pointer;
    white-space: nowrap;
    flex-shrink: 0;
    transition:
      background-color 0.2s ease-out,
      transform 0.1s ease-out;
  }

  .subscribe-button:hover {
    background-color: var(--gray-11);
    transform: translateY(-1px);
  }

  .subscribe-button:active {
    background-color: var(--gray-10);
    transform: translateY(0);
  }

  .button-text {
    display: none;
  }
  .button-icon {
    display: inline-flex;
  }
  .subscribe-button {
    padding: 0.5rem;
    width: 40px;
    height: 40px;
  }

  @media (min-width: 640px) {
    .button-text {
      display: inline;
    }
    .button-icon {
      display: none;
    }
    .subscribe-button {
      padding: 0.5rem 1rem;
      width: fit-content;
      height: auto;
    }
  }
</style>
