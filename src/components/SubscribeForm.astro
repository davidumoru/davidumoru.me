---
import { Icon } from "./Icon/Icon";

interface Props {
  buttonText?: string;
  placeholderText?: string;
  title?: string;
}

const {
  buttonText = "Subscribe",
  placeholderText = "Enter your email",
  title = "Project updates, web finds, and personal notes written like letters to friends.",
} = Astro.props;
---

<div class="subscribe-container">
  <p class="h3">Subscribe</p>
  <p class="subscribe-title">{title}</p>
  <form
    action="https://buttondown.email/api/emails/embed-subscribe/notesfromdavid"
    method="post"
    target="popupwindow"
    onsubmit="window.open('https://buttondown.email/notesfromdavid', 'popupwindow')"
    class="subscribe-form"
  >
    <label for="bd-email" class="visually-hidden">Email Address</label>
    <div class="input-wrapper">
      <input
        id="bd-email"
        type="email"
        name="email"
        placeholder={placeholderText}
        required
        class="subscribe-input"
      />
      <button type="submit" class="subscribe-button" aria-label={buttonText}>
        <Icon icon="arrowRight" size="20" />
      </button>
    </div>
    
    <input
      type="text"
      name="honeypot"
      class="visually-hidden"
      tabindex="-1"
      autocomplete="off"
    />
    
    <input type="hidden" value="1" name="embed" />
  </form>
</div>

<style>
  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  .subscribe-title {
    margin: 0 0 1rem 0;
    color: inherit;
    max-width: 65ch;
  }

  .subscribe-form {
    display: flex;
  }

  .input-wrapper {
    position: relative;
    width: 100%;
    display: flex;
    align-items: center;
  }

  .subscribe-input {
    padding: 0.75rem 1rem;
    padding-right: 3.5rem;
    border: 1px solid var(--gray-7);
    background-color: var(--gray-1);
    color: var(--gray-11);
    border-radius: 0.25rem;
    width: 100%;
    transition:
      border-color 0.2s ease-out,
      outline 0.2s ease-out;
  }

  .subscribe-input:focus-visible {
    outline: 2px solid var(--tomato-9);
    outline-offset: 2px;
    border-color: var(--gray-10);
  }

  .subscribe-button {
    position: absolute;
    right: 6px;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    background-color: var(--gray-12);
    color: var(--gray-1);
    border: none;
    border-radius: 0.25rem;
    cursor: pointer;
    white-space: nowrap;
    padding: 0.5rem;
    width: 40px;
    height: 40px;
    transition:
      background-color 0.2s ease-out,
      transform 0.1s ease-out;
  }

  .subscribe-button:hover {
    background-color: var(--gray-11);
    transform: translateY(-1px);
  }

  .subscribe-button:active {
    background-color: var(--gray-10);
    transform: translateY(0);
  }
</style>