---
import { Icon } from "./Icon/Icon";

interface Props {
  buttonText?: string;
  placeholderText?: string;
  title?: string;
}

const {
  buttonText = "Subscribe",
  placeholderText = "Enter your email",
  title = "Project updates, web finds, and personal notes written like letters to friends.",
} = Astro.props;
---

<div class="subscribe-container">
  <p class="h3">Subscribe</p>
  <p class="subscribe-title">{title}</p>
  <form
    action="https://buttondown.com/api/emails/embed-subscribe/notesfromdavid"
    method="post"
    target="popupwindow"
    onsubmit="window.open('https://buttondown.com/notesfromdavid', 'popupwindow')"
    class="subscribe-form"
  >
    <label for="bd-email" class="visually-hidden">Email Address</label>
    
    <div class="input-wrapper">
      <input
        id="bd-email"
        type="email"
        name="email"
        placeholder={placeholderText}
        required
        class="subscribe-input"
      />
      <button type="submit" class="subscribe-button" aria-label={buttonText}>
        <Icon icon="arrowRight" size="20" />
      </button>
    </div>
    
    <label for="bd-honeypot" class="visually-hidden">Do not fill out this field</label>
    <input
      id="bd-honeypot"
      type="text"
      name="honeypot"
      class="visually-hidden"
      tabindex="-1"
      autocomplete="off"
    />
    
    <input type="hidden" value="1" name="embed" />
  </form>
</div>

<style>
  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  .subscribe-title {
    margin: 0.5rem 0 1.5rem 0;
    color: var(--gray-11);
    max-width: 65ch;
    line-height: 1.6;
  }

  .subscribe-form {
    display: flex;
    flex-direction: column;
    width: 100%;
  }

  .input-wrapper {
    position: relative;
    width: 100%;
    display: flex;
    align-items: center;
  }

  .subscribe-input {
    width: 100%;
    padding: 0.75rem 1rem;
    padding-right: 3.5rem; 
    
    background-color: var(--gray-2);
    border: 1px solid var(--gray-7);
    border-radius: 6px;
    color: var(--gray-12);
    font-size: 0.95rem;
    
    transition: 
      border-color 0.2s ease, 
      background-color 0.2s ease, 
      box-shadow 0.2s ease;
  }

  .subscribe-input::placeholder {
    color: var(--gray-9);
  }

  .subscribe-input:hover {
    border-color: var(--gray-8);
  }

  .subscribe-input:focus {
    outline: none;
    border-color: var(--gray-8);
    background-color: var(--gray-1);
    box-shadow: 0 0 0 4px var(--gray-4);
  }

  .subscribe-input:invalid:not(:placeholder-shown) {
    border-color: var(--tomato-9);
  }

  .subscribe-button {
    position: absolute;
    right: 6px;
    top: 50%;
    transform: translateY(-50%);
    
    display: inline-flex;
    justify-content: center;
    align-items: center;
    
    width: 36px;
    height: 36px;
    padding: 0;
    
    background-color: var(--gray-12);
    color: var(--gray-1);
    border: none;
    border-radius: 4px;
    cursor: pointer;
    
    transition: 
      background-color 0.2s cubic-bezier(0.16, 1, 0.3, 1), 
      transform 0.2s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .subscribe-button:hover {
    background-color: var(--gray-11);
  }

  .subscribe-button:active {
    transform: translateY(-50%) scale(0.96);
  }

  .subscribe-button :global(svg) {
    transition: transform 0.2s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .subscribe-button:hover :global(svg) {
    transform: translateX(2px);
  }
</style>
