---
interface Props {
  buttonText?: string;
  placeholderText?: string;
  title?: string;
}

const {
  buttonText = "Subscribe",
  placeholderText = "Enter your email",
  title = "Subscribe for project updates, web finds, and personal notes written like letters to friends.",
} = Astro.props;
---

<div class="subscribe-container">
  <p class="subscribe-title">{title}</p>
  <form
    action="https://buttondown.email/api/emails/embed-subscribe/notesfromdavid"
    method="post"
    target="popupwindow"
    onsubmit="window.open('https://buttondown.email/notesfromdavid', 'popupwindow')"
    class="subscribe-form"
  >
    <input
      type="email"
      name="email"
      placeholder={placeholderText}
      required
      class="subscribe-input"
    />
    <input type="hidden" value="1" name="embed" />
    <button type="submit" class="subscribe-button">
      {buttonText}
    </button>
  </form>
</div>

<style>
  .subscribe-container {
    padding: 2rem;
    border: 1px solid var(--gray-8);
    border-radius: 0.5rem;
    margin: 0 auto;
  }

  .subscribe-title {
    margin: 0 0 1rem 0;
    color: inherit;
    font-size: 1rem;
  }

  .subscribe-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  @media (min-width: 640px) {
    .subscribe-form {
      flex-direction: row;
      align-items: center;
    }
    .subscribe-input {
      flex-grow: 1;
    }
  }

  .subscribe-input {
    padding: 0.5rem;
    border: 1px solid var(--gray-8);
    background-color: var(--gray-1);
    color: var(--gray-12);
    border-radius: 0.25rem;
    font-size: 1rem;
    width: 100%;
  }

  .subscribe-input:focus {
    outline: none;
    border-color: var(--gray-12);
  }

  .subscribe-button {
    background-color: var(--gray-12);
    color: var(--gray-1);
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
    font-size: 1rem;
    cursor: pointer;
    width: fit-content;
    white-space: nowrap;
  }

  .subscribe-button:hover {
    background-color: var(--gray-11);
  }
</style>
