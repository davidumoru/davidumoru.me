---
export interface Film {
  title: string;
  director: string;
  posterUrl: string;
  reviewUrl?: string | null;
}

interface Props {
  film: Film;
}

const { film } = Astro.props;
---

<a
  href={film.reviewUrl}
  target="_blank"
  rel="noopener noreferrer"
  class:list={["film-card", { "no-link": !film.reviewUrl }]}
  aria-label={film.reviewUrl
    ? `Read review for ${film.title}`
    : `Poster for ${film.title}`}
>
  <div class="poster-frame">
    <img
      src={film.posterUrl}
      alt={`Poster of ${film.title}`}
      width="200"
      height="300"
      loading="lazy"
      class="poster-image"
    />
  </div>
  <p class="title">{film.title}</p>
</a>

<style>
  .film-card {
    display: block;
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s ease-out;
  }

  .film-card:hover {
    transform: translateY(-4px);
  }

  .film-card.no-link {
    pointer-events: none;
  }

  .poster-frame {
    background-color: var(--gray-4);
    padding: 0.75rem;
    margin-bottom: 0.75rem;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
  }

  .poster-image {
    display: block;
    width: 100%;
    height: auto;
    aspect-ratio: 2 / 3;
    object-fit: cover;
  }

  .title {
    font-size: 0.875rem;
    line-height: 1.4;
    color: var(--gray-11);
    text-align: center;
    padding: 0 0.25rem;
  }
</style>
