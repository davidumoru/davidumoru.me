---
import BaseLayout from "./BaseLayout.astro";
import CenteredLayout from "./CenteredLayout.astro";
import PageHeader from "../components/PageHeader.astro";
import { Icon } from "../components/Icon/Icon";
import type { CollectionEntry } from "astro:content";
import ExperimentRenderer from "../components/Lab/ExperimentRenderer";
import type { ComponentKey } from "../components/Lab/componentRegistry";

interface Props {
  entry: CollectionEntry<"lab">;
}

const { entry } = Astro.props;
const {
  title,
  description,
  datePublished,
  repositoryUrl,
  componentKey,
} = entry.data;
---

<BaseLayout title={title} description={description}>
  <CenteredLayout>
    <PageHeader title={title} datePublished={datePublished} />

    <div class="lab-controls">
      <a href="/lab" class="icon-btn" aria-label="Go back to labs">
        <Icon icon="goBack" size="18" />
      </a>

      <div class="actions-group">
        {
          repositoryUrl && (
            <a
              href={repositoryUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="icon-btn"
              aria-label="View Source on GitHub"
            >
              <Icon icon="github" size="18" />
            </a>
          )
        }
        
        <button id="copy-lab-url" class="icon-btn" aria-label="Copy URL">
          <span class="icon-wrapper default">
            <Icon icon="copy" size="18" />
          </span>
          <span class="icon-wrapper success">
            <svg 
              xmlns="http://www.w3.org/2000/svg" 
              width="18" 
              height="18" 
              viewBox="0 0 24 24" 
              fill="none" 
              stroke="currentColor" 
              stroke-width="2" 
              stroke-linecap="round" 
              stroke-linejoin="round"
            >
              <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
          </span>
        </button>
      </div>
    </div>

    {
      componentKey && (
        <ExperimentRenderer componentKey={componentKey as ComponentKey} client:load />
      )
    }

    <div>
      <slot />
    </div>
  </CenteredLayout>
</BaseLayout>

<script>
  const initCopyButton = () => {
    const copyBtn = document.getElementById('copy-lab-url');

    if (copyBtn) {
      copyBtn.addEventListener('click', async () => {
        try {
          await navigator.clipboard.writeText(window.location.href);
          copyBtn.setAttribute('data-copied', 'true');
          
          setTimeout(() => {
            copyBtn.removeAttribute('data-copied');
          }, 2000);
        } catch (err) {
          console.error('Failed to copy: ', err);
        }
      });
    }
  };

  document.addEventListener('astro:page-load', initCopyButton);
</script>

<style>
  .lab-controls {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-block: 1rem 2rem;
  }

  .actions-group {
    display: flex;
    gap: 0.6rem;
  }

  .icon-btn {
    position: relative;
    appearance: none;
    border: none;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 36px; 
    height: 36px;
    border-radius: 50%;
    cursor: pointer;
    background-color: var(--gray-3);
    color: var(--gray-11);
    transition: background-color 0.2s ease, transform 0.1s ease, color 0.2s ease;
    text-decoration: none;
    line-height: 0;
    overflow: hidden;
  }

  .icon-btn:hover {
    background-color: var(--gray-5);
    color: var(--gray-12);
  }

  .icon-btn:active {
    background-color: var(--gray-6);
    transform: scale(0.95);
  }

  .icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute; 
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .icon-wrapper.default {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }
  
  .icon-wrapper.success {
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.5);
    color: var(--gray-12);
  }

  #copy-lab-url[data-copied="true"] .icon-wrapper.default {
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.5);
  }

  #copy-lab-url[data-copied="true"] .icon-wrapper.success {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }
  
  #copy-lab-url[data-copied="true"] {
    background-color: var(--gray-5);
    color: var(--gray-12);
  }
</style>
