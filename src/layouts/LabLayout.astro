---
import BaseLayout from "./BaseLayout.astro";
import CenteredLayout from "./CenteredLayout.astro";
import PageHeader from "../components/PageHeader.astro";
import { Icon } from "../components/Icon/Icon";
import type { CollectionEntry } from "astro:content";
import Wrapper from "../components/Lab/Wrapper.astro";

interface Props {
  entry: CollectionEntry<"lab">;
}

const { entry } = Astro.props;
const {
  title,
  description,
  datePublished,
  repositoryUrl,
  componentKey,
  hydration,
} = entry.data;
---

<BaseLayout title={title} description={description}>
  <CenteredLayout>
    <PageHeader
      title={title}
      description={description}
      datePublished={datePublished}
    />

    <div class="lab-controls">
      <a href="/lab" class="link">
        <Icon icon="arrowLeft" size="16" /> Back to Lab
      </a>
      {
        repositoryUrl && (
          <a
            href={repositoryUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="link"
          >
            View Source <Icon icon="arrowRightUp" size="16" />
          </a>
        )
      }
    </div>

    {
      componentKey && (
        <Wrapper componentKey={componentKey as any} hydration={hydration} />
      )
    }

    <div>
      <slot />
    </div>
  </CenteredLayout>
</BaseLayout>

<style>
  .lab-controls {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-block: 1rem 2rem;
  }

  .link {
    display: inline-flex;
    align-items: center;
    gap: 0.25em;
    line-height: 1;
    vertical-align: middle;
  }

  .link svg {
    display: inline-block;
    vertical-align: middle;
    position: relative;
    top: 0.05em;
  }
</style>
